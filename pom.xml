	<modelVersion>4.0.0</modelVersion>

	<groupId>com.gjj</groupId>
	<artifactId>spring-mvc-java-config-demo</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<modules>
		<module>dao</module>
		<module>service</module>
		<module>controller</module>
		<module>common</module>
		<module>config</module>
		<module>model</module>
		<module>webapp</module>
	</modules>
	<properties>
		<java.version>1.8</java.version>
		<junit>4.12</junit>
		<mysql.connector>6.0.6</mysql.connector>
		<h2>1.4.195</h2>
		<maven-compiler-plugin>3.6.0</maven-compiler-plugin>
		<common-io>2.5</common-io>
		<guava>22.0</guava>
		<log4j>1.2.17</log4j>
		<mockito-all>1.9.5</mockito-all>
		<commons-lang3>3.5</commons-lang3>
		<guava>22.0</guava>
		<javatuples>1.2</javatuples>
		<servlet-api-version>3.1.0</servlet-api-version>
		<jstl>1.2</jstl>
		<spring.security.version>4.2.3.RELEASE</spring.security.version>
	</properties>
	<packaging>pom</packaging>
	<name>spring-mvc-java-config-demo</name>
	<build>
		<plugins>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.5.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>


			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>3.0.0</version>
				<configuration>
					<failOnMissingWebXml>false</failOnMissingWebXml>
				</configuration>
			</plugin>
			<!-- <plugin> <artifactId>maven-war-plugin</artifactId> <version>3.0.0</version> 
				<configuration> <warSourceDirectory>controller/web</warSourceDirectory> </configuration> 
				</plugin> -->

		</plugins>
	</build>


